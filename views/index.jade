block body
	include ./layout/_header   
	//- content 
	.bgPage.home
	.row

		.col-md-7.col-sm-8.-block_center
			.row
				.col-sm-5.col-xs-8
					p.pageHeader travel information

			.step1_block.block_elements
				//- p.step-title ประกันภัยเดินทาง
				.step-connect_nav
					.line_dot
					ul
						li
							.circle: span 1
							p การเดินทาง
						li.active 
							.circle: span 2
							p แผนคุ้มครอง
						li
							.circle: span 3
							p ผู้เอาประกัน
						li
							.circle: span 4
							p ยืนยัน

				.step-tab
					ul.nav.nav-tabs
						li.active: a(href='#sec_in', data-toggle='tab') ต่างประเทศ
						li: a(href='#sec_out', data-toggle='tab') ในประเทศ
					.row
						.tab-content.clearfix.col-sm-10.col-md-9.-block_center
							.tab-pane.active#sec_in
								form
									.radioForm(role='form')
										.radio.radio-inline
											input#radioRound(type='radio', name='trip', value='round',checked='')
											label(for='radioRound')
												| รายเที่ยว
										.radio.radio-inline
											input#radioYear(type='radio', name='trip', value='year')
											label(for='radioYear')
												| รายปี
									.form-group.inline_field
										label(for='usr') Name:
										input#usr.form-control(type='text')
									.form-group.inline_field
										label ไปยังประเทศ
										select.selectpicker
											option Car
											option Bird
											option Thee
									.form-group.inline_field
										label เดินทางไป
										.datepick
											input.form-control(type='text', name='startdate')
											i.ico_datestart
									.form-group.inline_field
										label เดินทางกลับ
										.datepick
											input.form-control(type='text', name='enddate')
											i.ico_dateend
									.form-group.inline_field.text-resultDate
										label จำนวนวันเดินทาง
										p 10
									.form-group.inline_field.material
										.group
											input(type='text' required)
											label ไปยังประเทศ
									button.btn.btn-primary.-center(type='submit') ถัดไป



							.tab-pane#sec_out
								p We use the class nav-pills instead of nav-tabs which automatically creates a background color for the tab
